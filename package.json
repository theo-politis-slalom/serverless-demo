{
  "name": "hello-world-lambda",
  "version": "1.0.0",
  "description": "TypeScript Lambda function for Hello World API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "package": "npm run build && npm prune --production && zip -r function.zip .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.879.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/yup": "^0.29.14",
    "aws-lambda": "^1.0.7",
    "source-map-support": "^0.5.21",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.11",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
